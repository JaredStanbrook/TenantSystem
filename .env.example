ENVIRONMENT="local"

# ==========================================
# CORE AUTHENTICATION
# ==========================================
# Comma-separated list.
# Options: passkey, password, pin, totp, email, sms
AUTH_METHODS=passkey,password

# Required secrets (set via wrangler secrets in production)
JWT_SECRET=CHANGE_ME
GOOGLE_MAPS_API_KEY=

# Session settings (in milliseconds)
SESSION_DURATION=86400000
SESSION_RENEWAL_THRESHOLD=3600000
MAX_SESSIONS_PER_USER=5

# ==========================================
# SECURITY & ACCESS CONTROL
# ==========================================
# Invite-only mode (optional). If set, only this email can register.
ALLOWED_EMAILS=

# Brute force protection
MAX_FAILED_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Verification flags (true/false)
REQUIRE_EMAIL_VERIFICATION=false
REQUIRE_PHONE_VERIFICATION=false

# ==========================================
# ROLES & PERMISSIONS (RBAC)
# ==========================================
# 1. Available: All roles the system understands
ROLES_AVAILABLE=tenant,landlord,admin

# 2. Default: Assigned automatically upon registration
ROLES_DEFAULT=tenant

# 3. Restricted: Cannot be requested via API (must be assigned via DB/Seed)
ROLES_RESTRICTED=admin

# 4. Permissions: All valid permission strings
PERMISSIONS_AVAILABLE=

ROLES_INHERENT="admin:*"
# ==========================================
# PASSKEY / WEBAUTHN CONFIG
# ==========================================
# Required if AUTH_METHODS includes 'passkey'
# NOTE: For local dev, RP_ID must be 'localhost'
RP_NAME=Tenant System (Local)
RP_ID=localhost
ORIGIN=http://localhost:5173

# ==========================================
# PASSWORD CONFIG
# ==========================================
# Required if AUTH_METHODS includes 'password'
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# ==========================================
# PIN CONFIG
# ==========================================
# Required if AUTH_METHODS includes 'pin'
PIN_LENGTH=6
PIN_NUMBERS_ONLY=true

# ==========================================
# TOTP CONFIG
# ==========================================
# Required if AUTH_METHODS includes 'totp'
TOTP_ISSUER=TenantSystem
TOTP_ALGORITHM=SHA1
TOTP_DIGITS=6
TOTP_PERIOD=30

# ==========================================
# EMAIL / SMS PROVIDERS
# ==========================================
# Required only if 'email' or 'sms' methods are enabled above
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMS_PROVIDER_API_KEY=mock_key
